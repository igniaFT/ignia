    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Tổng các số chẵn nhỏ hơn 4 là: 2\n"
     ]
    }
   ],
   "source": [
    "n = int(input(\"Nhập một số nguyên dương n: \"))\n",
    "tong = 0\n",
    "i = 0 # Bắt đầu từ số chẵn đầu tiên (0)\n",
    "\n",
    "while i < n:\n",
    "    # Cộng dồn số chẵn hiện tại vào tổng\n",
    "    tong += i\n",
    "    # Tăng biến đếm lên 2 để chuyển sang số chẵn tiếp theo\n",
    "    i += 2\n",
    "print(f\"Tổng các số chẵn nhỏ hơn {n} là: {tong}\")\n"
   ]
